@model SmartAdmin.WebUI.ViewModel.PagingViewModel<SmartAdmin.WebUI.ViewModel.UsersIndexViewModel>
@{
    
    ViewData["Title"] = "Mobile users";
    ViewData["PageName"] = "UserMobile_index";
    int counter = 0;
}
